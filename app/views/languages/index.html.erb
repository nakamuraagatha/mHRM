<p id="notice"><%= notice %></p>

<h1>Languages</h1>


<%= link_to('New Language', new_language_path, class: 'btn btn-primary pull-right margin-bottom-10') if can?(:create_languages, :manage_roles, :manage_languages) %>

<table class="table table-responsive table-bordered">
  <thead>
  <tr>
    <th>Language type</th>
    <th>Proficiency</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% if @languages.any?  %>
      <% @languages.each do |language| %>
          <tr>
            <td><%= link_to language.language_type, language %></td>
            <td><%= language.proficiency_type %></td>
            <td><%= edit_link language %></td>
            <td><%= delete_link language %></td>
          </tr>
      <% end %>
  <% else %>
      <tr align="center">
        <td colspan="11"><%= t('label_no_data') %></td>
      </tr>
  <% end %>
  </tbody>
</table>
