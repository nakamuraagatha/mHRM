<%= form_for(User.current, url: employee_path(User.current), html: {method: 'put', class: 'form-horizontal', id: 'smart-form-register' }) do |f| %>

    <fieldset>
      <legend>Change User Information</legend>

      <div class="form-group">
        <label class="col-md-2 control-label">Email</label>
        <div class="col-md-9">
          <%= f.email_field :email, placeholder: 'Email' , class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-md-2 control-label">Status</label>
        <div class="col-md-9">
          <%= f.select :state, options_for_select([['Active', true],['Inactive', false]], selected: user.state), {}, {class: 'form-control'} %>
        </div>
      </div>

      <div class="form-group" >
        <div class="col-md-11">
          <%= f.submit "Update", class: 'btn btn-primary pull-right' %>
        </div>
      </div>
    </fieldset>
<% end %>
<script>
  // Validation
  $(function() {
    runAllForms();
    // Validation
    $("#smart-form-register").validate({

      // Rules for form validation
      rules : {
        "user[login]" : {
          required : true
        },
        "user[email]" : {
          required : true
        }
      },
      // Do not change code below
      errorPlacement : function(error, element) {
        error.insertAfter(element.parent());
      }
    });

  });
</script>