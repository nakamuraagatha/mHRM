<p id="notice"><%= notice %></p>

<h1>Certifications</h1>
<%= link_to( 'New Certification', new_certification_path, class: 'btn btn-primary pull-right') if can?(:create_certifications)%>
<table class="table table-responsive table-bordered">
  <thead>
  <tr>
    <th>Certification type</th>
    <th>User</th>
    <th>Date received</th>
    <th>Date expired</th>
    <th>File</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% if @certifications.any? %>
      <% @certifications.each do |certification| %>
          <tr>
            <td><%= link_to certification.certification_type, certification_path(certification) %></td>
            <td><%= certification.user %></td>
            <td><%= certification.date_received %></td>
            <td><%= certification.date_expired %></td>
            <td><%= link_to(certification.read_attribute(:file), certification.file_url) if certification.file_url  %></td>

            <td><%= edit_link edit_certification_path(certification) %></td>
            <td><%= delete_link certification %></td>
          </tr>
      <% end %>
  <% else %>
      <tr align="center">
        <td colspan="11"><%= t('label_no_data') %></td>
      </tr>
  <% end %>
  </tbody>
</table>
