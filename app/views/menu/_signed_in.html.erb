<ul>

  <% if can?(:manage_roles) %>
      <li class="<%= menu_active?('employees') %>">
        <a href="<%= employees_path %>" title="<%= t 'label_search' %>"><i class="fa fa-lg fa-fw fa-users"></i> <span class="menu-item-parent"><%= t :label_search %></span></a>
      </li>
  <% end %>

  <li class="<%= menu_active?('devise/registrations') %>">
    <a href="<%= edit_user_registration_path %>" title="<%= t('profile.profile') %>"><i class="fa fa-lg fa-fw fa-user"></i> <span class="menu-item-parent"><%= t('profile.profile') %></span></a>
  </li>

  <% if User.current.allowed_to?(:manage_roles) %>
      <li class="<%= menu_active?('tasks') %>">
        <a href="<%= tasks_path %>" title="<%= t :tasks %>"><i class="fa fa-lg fa-fw fa-tasks"></i> <span class="menu-item-parent"><%= t(:tasks) %></span></a>
      </li>
  <% end %>


  <% if User.current.admin? %>
      <%= render partial: 'menu/admin' %>
  <% elsif !User.current.allowed_to?(:manage_roles) or session[:employee_id] %>
      <li class="<%= menu_active?('educations') %>">
        <a href="<%= educations_path %>" title="<%= t(:educations) %>"><i class="fa fa-lg fa-fw fa-graduation-cap"></i> <span class="menu-item-parent"><%= t(:educations) %></span></a>
      </li>

      <li class="<%= menu_active?('languages') %>">
        <a href="<%= languages_path %>" title="<%= t(:languages) %>"><i class="fa fa-lg fa-fw fa-language"></i> <span class="menu-item-parent"><%= t(:languages) %></span></a>
      </li>

      <li class="<%= menu_active?('other_skills') %>">
        <a href="<%= other_skills_path %>" title="<%= t(:other_skills) %>"><i class="fa fa-lg fa-fw fa-plus"></i> <span class="menu-item-parent"><%= t(:other_skills) %></span></a>
      </li>

      <li class="<%= menu_active?('certifications') %>">
        <a href="<%= certifications_path %>" title="<%= t(:certifications) %>"><i class="fa fa-lg fa-fw fa-certificate"></i> <span class="menu-item-parent"><%= t(:certifications) %></span></a>
      </li>

      <li class="<%= menu_active?('clearances') %>">
        <a href="<%= clearances_path %>" title="<%= t(:clearences) %>"><i class="fa fa-lg fa-fw fa-eraser"></i> <span class="menu-item-parent"><%= t(:clearences) %></span></a>
      </li>

      <li class="<%= menu_active?('documents') %>">
        <a href="<%= documents_path %>" title="<%= t(:documents) %>"><i class="fa fa-lg fa-fw fa-book"></i> <span class="menu-item-parent"><%= t(:documents) %></span></a>
      </li>
      <li class="<%= menu_active?('positions') %>">
        <a href="<%= positions_path %>" title="<%= t(:positions) %>"><i class="fa fa-lg fa-fw fa-sort"></i> <span class="menu-item-parent"><%= t(:positions) %></span></a>
      </li>

      <li class="<%= menu_active?('contacts') %>">
        <a href="<%= contacts_path %>" title="<%= t(:contacts) %>"><i class="fa fa-lg fa-fw fa-sitemap"></i> <span class="menu-item-parent"><%= t(:contacts) %></span></a>
      </li>

      <li class="<%= menu_active?('affiliations') %>">
        <a href="<%= affiliations_path %>" title="<%= t(:affiliations) %>"><i class="fa fa-lg fa-fw fa-home"></i> <span class="menu-item-parent"><%= t(:affiliations) %></span></a>
      </li>

      <% unless User.current.allowed_to?(:manage_roles) %>
          <li class="<%= menu_active?('tasks') %>">
            <a href="<%= tasks_path %>" title="<%= t :tasks %>"><i class="fa fa-lg fa-fw fa-tasks"></i> <span class="menu-item-parent"><%= t(:tasks) %></span></a>
          </li>
      <% end %>
  <% end %>
</ul>