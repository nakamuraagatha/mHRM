<p id="notice"><%= notice %></p>

<h1>Educations</h1>

<%= link_to 'New Education', new_education_path, class:'btn btn-primary pull-right'%>

<table class="table table-responsive">
  <thead>
  <tr>
    <th>Education type</th>
    <th>Certification</th>
    <th>Other skill</th>
    <th>Date recieved</th>
    <th>Date expired</th>
    <th>Note</th>
    <th>Clearence</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @educations.each do |education| %>
      <tr>
        <td><%= education.education_type %></td>
        <td><%= education.certification %></td>
        <td><%= education.other_skill %></td>
        <td><%= education.date_recieved %></td>
        <td><%= education.date_expired %></td>
        <td><%= education.note %></td>
        <td><%= education.clearence %></td>
        <td><%= link_to 'Show', education %></td>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
